<%- include("partials/header") -%>
<h1>Home</h1>
<p><%=homeStartingContent %></p>
<% for(let i = 0; i< posts.length;i++){ %>
<div class="">
  <h1><%= posts[i]["title"] %></h1>
  <% if(posts[i].content.length > 150){ %>
  <p>
    <%= posts[i]["content"].slice(0,150) + "...." %>
    <a href="/posts/<%=posts[i].title %>"> Read more</a>
  </p>
  <% }else{ %>
  <p><%= posts[i]["content"] %></p>
  <% } %>
</div>
<% } %> <%- include("partials/footer") -%>
